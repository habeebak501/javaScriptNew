<script>
   function get(){
var today = new Date();
var day = today.getUTCDate();
         day += 1;
      document.write("date "+day+" ");
}
 function set(){
  var today = new Date();
var weekday = today.getUTCDay();
        weekday += 1;
//document.write(weekday);
switch(weekday)
     {
          case 1:document.write("monday"+" ");
          break;
          case 2:document.write("tuesday"+" ");
          break;
          case 3:document.write("wednesday"+" ");
          break;
          case 4:document.write("thursday"+" ");
          break;
          case 5:document.write("friday"+" ");
          break;
          case 6:document.write("saturday"+" ");
          break;
          case 7:document.write("sunday"+" ");
          break;
       }
}
function put(){
      
   var theBigDay = new Date();
       var year= theBigDay.getFullYear();
      document.write(year);
}
   get();
    set();
     put();
</script>

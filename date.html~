<script>
var Xmas95 = new Date('December 30, 1995 ');
var weekday = Xmas95.getDay();
document.write(weekday+"<br>");
 switch(weekday)
     {
          case 1:document.write("monday"+"<br>");
          break;
          case 2:document.write("tuesday"+"<br>");
          break;
          case 3:document.write("wednesday"+"<br>");
          break;
          case 4:document.write("thursday"+"<br>");
          break;
          case 5:document.write("friday"+"<br>");
          break;
          case 6:document.write("saturday"+"<br>");
          break;
          case 7:document.write("sunday"+"<br>");
          break;
       }
         document.write("........................."+"<br>");
         var abc = new Date( 'August 09, 2016 ');
           var nextdate = abc.getDate();
           var nextday = abc.getDay();
                nextdate += 1;
             
           document.write(nextdate+"<br>");
           nextday += 1;
            document.write(nextday+"<br>");
            switch(nextday)
            {
          case 1:document.write("monday"+"<br>");
          break;
          case 2:document.write("tuesday"+"<br>");
          break;
          case 3:document.write("wednesday"+"<br>");
          break;
